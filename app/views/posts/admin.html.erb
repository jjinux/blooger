<h2>Listing Posts</h2>

<% if @posts.empty? %>
  <p>There are no posts yet.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to "Show", user_post_path(:user_id => current_user, :id => post) %></td>
        <td><%= link_to 'Destroy', user_post_path(:user_id => current_user, :id => post), :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<p>
  <%= link_to 'New Post', new_user_post_path(:user_id => current_user) %>
</p>