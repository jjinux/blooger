<h2>Post</h2>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <blockquote><%= format_body(@post.body) %></blockquote>
</p>

<p>
  <%= link_to 'Edit', edit_user_post_path(:user_id => current_user, :id => @post) %> |
  <%= link_to 'Back', admin_user_posts_path(:user_id => current_user) %>
</p>